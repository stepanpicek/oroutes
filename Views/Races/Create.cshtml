@model OBPostupy.Models.Races.Race

@{
    ViewData["Title"] = "Create";
}

    <div class="page-content">

        <h1>Vytvořit závod</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartTime" class="control-label"></label>
                        <input id="StartTime"  class="form-control input-validation-error" type="date" data-val="true" data-val-required="Položka Start je povinná." name="StartTime" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Vytvořit" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-controller="Home" asp-action="Index">Zpět na hlavní stránku</a>
        </div>

    </div>
