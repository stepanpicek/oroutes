@{
    @model IEnumerable<OBPostupy.Models.Races.Race>    
}

    <div class="main-page-content mt-5">
        <div class="float-right mb-4">
            <a class="btn btn-primary" asp-controller="Races" asp-action="Create" role="button">Vytvořit nový závod</a>
        </div>
        <table class="table table-sm mt-4">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Datum</th>
                    <th scope="col">Závod</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.StartTime.Date.ToString("dd.MM.yyyy")
                        </td>
                        <td>
                            <a asp-controller="Races" asp-action="Details" asp-route-id="@item.ID"> @Html.DisplayFor(modelItem => item.Name)</a>
                        </td>
                        <td>
                            <a asp-controller="Races" asp-action="Details" asp-route-id="@item.ID"><i class="fas fa-eye px-3"></i></a>
                            <a asp-controller="Races" asp-action="Setting" asp-route-id="@item.ID"><i class="fas fa-pen px-3"></i></a>
                            <a asp-controller="Races" asp-action="Delete" asp-route-id="@item.ID"><i class="fas fa-trash-alt px-3"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
