@model OBPostupy.Models.Races.Race;
@{
    ViewData["Title"] = "Delete";
}

    <div class="page-content">

        <h1>Smazat</h1>

        <h3>Opravdu chcete smazat tratě a kontroly ze závodu ?</h3>
