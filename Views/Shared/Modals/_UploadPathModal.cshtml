@model OBPostupy.ViewModels.RaceDetailViewModel

<div class="modal fade" id="uploadPathModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="uploadPathModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orisModalLabel">Nahrání GPS souboru</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div id="dropzone">
                    <form asp-controller="Paths" asp-action="Upload" enctype="multipart/form-data" class="dropzone dz-clickable" id="uploader">

                        <input type="hidden" name="raceID" value="@Model.Race.ID" />
                        <input class="upload-path-competitor-id" type="hidden" name="competitorID" />
                        <div class="dz-message d-flex flex-column justify-content-center align-items-center">
                            <i class="fas fa-file-upload fa-3x p-2"></i>
                            Přetáhněte sem GPX soubor nebo klikněte
                        </div>
                    </form>
                </div>

                @if (Model.HasStravaAccount)
                {
                    <div id="stravaActivitiesSection">
                        <div class="text-center"> nebo vyberte ze Stravy</div>
                        <div class="form-row align-items-center">
                            <div class="col-auto my-1">
                                <label for="stravaDate">Datum</label>
                            </div>
                            <div class="col-auto my-1">
                                <input type="date" class="form-control" id="stravaDate" placeholder="Datum">
                            </div>
                            <div class="col-auto my-1">
                                <button type="button" class="btn btn-primary" id="showStravaActivityList">Zobrazit</button>
                            </div>
                        </div>
                        <form asp-controller="Paths" asp-action="StravaUpload" id="selectStravaActivityForm">
                            <input type="hidden" name="raceID" value="@Model.Race.ID" />
                            <input class="upload-path-competitor-id" type="hidden" name="competitorID" />
                            <select id="stravaListSelect" name="stravaID" class="custom-select my-2">
                            </select>
                            <input type="submit" class="btn btn-primary" class="uploadLink" value="Nahrát závod ze Stravy" />
                        </form>
                    </div>
                }

            </div>
            <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Zavřít</button>
            </div>
        </div>
    </div>
</div>