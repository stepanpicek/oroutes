@model OBPostupy.ViewModels.RaceSettingViewModel;

<div class="modal fade" id="orisModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="orisModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orisModalLabel">Stažení výsledků</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-row align-items-center">
                    <div class="col-auto my-1">
                        <label for="OrisEventDate">Datum závodů</label>
                    </div>
                    <div class="col-auto my-1">
                        <input type="date" class="form-control" id="OrisEventDate" placeholder="Datum závodu">
                    </div>
                    <div class="col-auto my-1">
                        <button type="button" class="btn btn-primary" id="ShowOrisEventList">Zobrazit</button>
                    </div>
                </div>
            </div>
            <form asp-controller="Results" asp-action="GetResults">
                <input type="hidden" name="ID" value="@Model.Race.ID" />
                <select id="OrisEventListSelect" asp-for="OrisEventID" class="custom-select my-2">
                </select>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Zavřít</button>
                    <input type="submit" class="btn btn-primary" class="uploadLink" value="Uložit" />
                </div>
            </form>
        </div>
    </div>
</div>